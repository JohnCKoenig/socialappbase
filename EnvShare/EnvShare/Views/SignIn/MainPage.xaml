<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.SignIn.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                Text="Welcome to M"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Sign up or sign in to get started"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="signin description"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                x:Name="SignInBtn"
                Text="Sign In"
                Clicked="OnSignInClicked"
                FontSize="18"
               CornerRadius="0"
                WidthRequest="300"
                HorizontalOptions="Center" />
            <Button
                x:Name="SignUpBtn"
                Text="Sign Up"
                Clicked="OnSignInClicked"
                FontSize="18"
               CornerRadius="0"
                WidthRequest="300"
                HorizontalOptions="Center"
                BackgroundColor="ForestGreen"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
