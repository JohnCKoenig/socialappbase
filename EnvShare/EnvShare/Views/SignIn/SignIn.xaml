<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnvShare.Views.SignIn.SignIn"
             Title="SignIn">
    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="30,0"
            VerticalOptions="CenterAndExpand">

            <Label
                Text="Sign In"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Log into an existing account"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center" />
            <Entry x:Name="Username"
                   FontSize="18"
                   Placeholder="Username"
                   PlaceholderColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Primary}}" />
            <Entry x:Name="Password"
                   FontSize="18"
                   Placeholder="Password"
                   PlaceholderColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Primary}}" />
            <Button Text="Sign In" Clicked="SignInButton_Clicked" />


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>